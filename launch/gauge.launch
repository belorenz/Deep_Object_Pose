<launch>
  <arg name="config_gauge" default="$(find dope)/config/config_gauge.yaml"
  doc="Path to parameter config file"/>

  <arg name="config_pose" default="$(find dope)/config/config_pose.yaml"
       doc="Path to parameter config file"/>

  <node name="gauge" pkg="dope" type="gauge" output="screen"
  clear_params="true">
    <rosparam file="$(arg config_gauge)"/>
  </node>

  <node name="dope" pkg="dope" type="dope" output="screen" clear_params="true">
    <rosparam file="$(arg config_pose)"/>
  </node>
</launch>
